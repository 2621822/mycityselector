<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">
    <name>Mycityselector</name>
    <creationDate>Mar 2016</creationDate>
    <author>Konstantin Kutsevalov</author>
    <authorEmail>konstantin@kutsevalov.name</authorEmail>
    <authorUrl>http://kutsevalov.name</authorUrl>
    <copyright>All rights reserved</copyright>
    <license>GNU/GPL v3</license>
    <version>2.0.0</version>
    <description>COM_MYCITYSELECTOR_DESCRIPTION</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">uninstall.sql</file>
        </sql>
    </uninstall>

    <files folder="site"><filename>index.html</filename><folder>language</folder><filename>mycityselector.php</filename></files>

    <languages folder="site">
        <language tag="en-GB">language/en-GB/en-GB.com_mycityselector.sys.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.com_mycityselector.sys.ini</language>
    </languages>

    <administration>
        <menu img="/administrator/components/com_mycityselector/images/bubble-comment.png">COM_MYCITYSELECTOR_NAME</menu>
        <submenu>
            <menu link="option=com_mycityselector" img="class:module">COM_MYCITYSELECTOR_COUNTRIES</menu>
            <menu link="option=com_mycityselector&amp;controller=region" img="class:module">COM_MYCITYSELECTOR_REGIONS</menu>
            <menu link="option=com_mycityselector&amp;controller=city" img="class:module">COM_MYCITYSELECTOR_CITIES</menu>
        </submenu>

        <files folder="admin"><filename>admin-scripts.js</filename><filename>admin-style.css</filename><filename>com_mycityselector.xml</filename><folder>controllers</folder><folder>helpers</folder><folder>images</folder><filename>index.html</filename><filename>install.sql</filename><folder>language</folder><folder>models</folder><filename>mycityselector.php</filename><filename>uninstall.sql</filename><folder>views</folder></files>

        <languages folder="admin">
            <language tag="en-GB">language/en-GB/en-GB.com_mycityselector.sys.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_mycityselector.ini</language>
            <language tag="ru-RU">language/ru-RU/ru-RU.com_mycityselector.sys.ini</language>
            <language tag="ru-RU">language/ru-RU/ru-RU.com_mycityselector.ini</language>
        </languages>
    </administration>

    <!--updateservers>
        <server type="extension" priority="1" name="MyCitySelector Update server">{update_url}</server>
    </updateservers-->

</extension>
